{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["error", "always"],
    "no-console": "error",
    "no-empty": "error",
    "no-alert": "error",
    "comma-spacing": ["warn", { "before": false, "after": true }],
    "max-lines": ["warn", 300],
    "no-var": "error",
    "object-curly-spacing": ["warn", "always"],
    "eqeqeq": ["error", "always"]
  }
}
